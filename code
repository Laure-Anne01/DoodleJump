<canvas id="myCanvas" width="480" height="320"></canvas>

<script>

//base
var canvas = document.getElementById("myCanvas");
var ctx = canvas.getContext("2d");
var x = canvas.width/2;
var y = canvas.height-30;
var dx = 2;
var dy = -2;
//dimmension du perso
var paddleHeight = 30;
var paddleWidth = 75;
var paddleX = (canvas.width-paddleWidth)/2;
//etat des touche (droite et gauche)
var rightPressed = false;
var leftPressed = false;

//averti le changement d'étatt des touches
document.addEventListener("keydown", keyDownHandler, false);
document.addEventListener("keyup", keyUpHandler, false);


//temporaire
// drawPaddle() {
  //  ctx.beginPath();
   // ctx.rect(paddleX, canvas.height-paddleHeight, paddleWidth, paddleHeight);
   // ctx.fillStyle = "#0095DD";
  //  ctx.fill();
 //   ctx.closePath();
image=perso.png

void ctx.drawImage(image, dx, dy);
void ctx.drawImage(image, dx, dy, dLargeur, dHauteur);
void ctx.drawImage(image, sx, sy, sLargeur, sHauteur, dx, dy, dLargeur, dHauteur);

//image du perso
let img = new Image();   // Crée un nouvel élément img
img.src = 'data:image/gif;base64,R0lGODlhCwALAIAAAAAA3pn/ZiH5BAEAAAEALAAAAAALAAsAAAIUhA+hkcuO4lmNVindo7qyrIXiGBYAOw==';

//change l'état des touches
function keyDownHandler(e) {
    if(e.key == "Right" || e.key == "ArrowRight") {
        rightPressed = true;
    }
    else if(e.key == "Left" || e.key == "ArrowLeft") {
        leftPressed = true;
    else if(e.key == "Height" || e.key == "ArrowHeight") {
        heightPressed = true
    }
}

function keyUpHandler(e) {
    if(e.key == "Right" || e.key == "ArrowRight") {
        rightPressed = false;
    }
    else if(e.key == "Left" || e.key == "ArrowLeft") {
        leftPressed = false;
    }
    else if(e.key == "Height" || e.key == "HeightLeft") {
}


//mouv du perso

//tempo
function draw() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    drawPaddle();
    
    if(rightPressed && paddleX < canvas.width-paddleWidth) {
        paddleX += 7;
    }
    else if(leftPressed && paddleX > 0) {
        paddleX -= 7;
    }
    
    x += dx;
    y += dy;
	
	ctx.drawImage(img,x,y);
}

setInterval(draw, 10);

</script>

